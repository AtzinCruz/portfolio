<section id="contact" class="contact-section">
  <h2><%= t('contact.title') %></h2>
  <p><%= t('contact.description') %></p>

  <!-- Formulario de contacto -->
  <form class="contact-form">
    <div class="form-group">
      <label for="name"><%= t('contact.name') %></label>
      <input type="text" id="name" name="name" placeholder="Your Name" required>
    </div>
    <div class="form-group">
      <label for="email"><%= t('contact.email') %></label>
      <input type="email" id="email" name="email" placeholder="Your Email" required>
    </div>
    <div class="form-group">
      <label for="message"><%= t('contact.message') %></label>
      <textarea id="message" name="message" placeholder="Your Message" rows="5" required></textarea>
    </div>
    <button type="submit" class="contact-button"><%= t('contact.send') %></button>
  </form>

  <!-- Lista de contacto directo -->
  <ul class="contact-info">
    <li><i class="fas fa-envelope"></i> atzin.cruz@gamail.com</li>
    <li><i class="fas fa-phone"></i> +52 312 108 1656</li>
  </ul>

  <!-- Redes sociales -->
  <div class="social-links">
    <a href="https://github.com/AtzinCruz" target="_blank">
      <i class="fab fa-github"></i>
    </a>
    <a href="https://www.linkedin.com/in/atzin-cruz" target="_blank" rel="noopener noreferrer">
      <i class="fab fa-linkedin"></i>
    </a>

  </div>
</section>
